pipeline {
    agent any
    
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/BodusuSneha/flask-docker-app.git'
}
}
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flask-jenkins .'
}
}
        stage('Run Container') {
            steps {
                sh 'docker run -d -p 80:5000 flask-jenkins'
           }
}
}
}

